{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jasmine": true,
    "mocha": true,
    "node": true,
    "phantomjs": true,
    "serviceworker": true,
    "worker": true
  },
  "globals": {
      "console": false,
      "Modernizr": false
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "script"
  },
  "root": true,
  "rules": {
    "curly": 2,
    "eqeqeq": [2, "allow-null"],
    "new-cap": 2,
    "no-caller": 2,
    "no-undef": 2,
    "no-unused-vars": 2,
    "quotes": [2, "single"],
    "strict": [2, "global"],
    "wrap-iife": [2, "inside"]
  }
}